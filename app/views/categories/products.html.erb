<div class="container">
	<div class="row">
		<div class="col-3">
			<%= render 'products/components/side_bar', categories: @categories %>
		</div>

		<div class="col-9">
			<div class="row">
				<div class="col-12">
					<div class="jumbotron">
					  <h1> <%= @ad[:title] %> </h1>
					  <p> <%= @ad[:description] %> </p>
					  <p><a class="btn btn-primary btn-lg" href="#" role="button"> <%= @ad[:action_title] %> </a></p>
				  	</div>
				</div>
			</div>
			<div class="row">

				<% @products.each do |product| %>
					<div class="col-3">
						<%= render 'products/card/small', product: product %>
					</div>
				<% end %>
				
			</div>

			<div class="row">
				<div class="col-12">
					<%= render 'products/components/pagination', 
						page: @page ,
						first_page: @first_page ,
						last_page: @last_page,
						url_custom_helper_name: :products_category_path
					%>
				</div>
			</div>
		</div>
	</div>
</div>