<div class="container">
	<div class="row">
		<div class="col-3">
			<%= render 'products/components/side_bar', categories: @categories %>
		</div>

		<div class="col-9">
			<div class="row">
				<div class="col-12">
    				<p> <%= @product.subcategory.try(:name_with_category) %> </p>
				</div>
			</div>
			<div class="row">
				<div class="col-3">
					<%= image_tag (@product.image_url|| "https://via.placeholder.com/350x200"), size: "200x200", class:"img-responsive" %>
				</div>
				<div class="col-9">
					<div class="card">
					  <div class="card-header">
					  	<h4> <%= "#{@product.name}" %> </h4>
					  </div>
					  <div class="card-body">
					    <p> <%= @product.description %> </p>
					  </div>
					</div>
				</div>
			</div>
			<br />
			<div class="row">
				<div class="col-12">
					<button class="btn btn-primary btn-block">
						Buy it now!
					</button>
				</div>
			</div>
		</div>
	</div>
</div>