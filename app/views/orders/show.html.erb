<div>
	<h2> <%= "查看訂單: #{@order.id}" %> </h2>
	<p> <%= "收件人: #{@order.user_name}" %> </p>
	<p> <%= "收件人地址: #{@order.user_address}" %> </p>
	<p> <%= "收件人電話: #{@order.user_phone}" %> </p>
	<p> <%= "總金額: #{@order.amount}" %> </p>

	<table class="table" style="width:600px;">
		<thead>
			<tr>
				<th> 編號 </th>
				<th> 商品名稱 </th>
				<th> 商品價格 </th>
				<th> 數量 </th>
			</tr>
		</thead>
		<tbody>
		<% @order_items.each_with_index do |order_item, index| %>
			<tr>
				<td>
					<%= index %>
				</td>
				<td>
					<%= order_item.product.name %>
				</td>
				<td>
					<%= order_item.price %>
				</td>
				<td>
					<%= order_item.quantity %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>